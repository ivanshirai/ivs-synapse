														"value": {
															"value": "@if(empty(pipeline().parameters.p_datetime_to), activity('GetCDCTimeStamp').output.resultSets[0].rows[0].CDCTimestamp, activity('ReadMonitoringBlob').output.firstRow.CDCTimestamp)",
															"type": "Expression"
														}
													},
													{
														"name": "currentUTC",
														"value": {
															"value": "@utcnow()",
															"type": "Expression"
														}
													},
													{
														"name": "deltaLink",
														"value": ""
													},
													{
														"name": "rowCount",
														"value": {
